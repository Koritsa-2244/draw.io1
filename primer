#include <iostream>
#include <string>
#include <windows.h>

using namespace std;


int main()
{
    SetConsoleOutputCP(1251);
    SetConsoleCP(1251); //подключение поддержки русского языка
    int  size = 256; //объявление переменной размера массива
    char* s = new char[size];//создание массива символов строки
    cout << "Введите строку: "; 
    cin.getline(s, size);//ввод строки размером size5
    int count = 0; //создаем переменную для подсчет слов

    if (s[0] == 'o'   || s[0] == 'O' || s[0] == 'о' || s[0] == 'О') count++; /*если слово начинается с буквы "о" малой или большой, 
    русской или английской считаем это слово*/
    for (int i = 0; s[i]; i++) //считаем с 0го символа
    {
        if (s[i] == ',') { //если встречена запятая проверяем следующий символ, если это "о" - считаем слово
            if (s[i + 1] == 'o' || s[i + 1] == 'O' || s[i + 1] == 'о' || s[i + 1] == 'О') count++;
        }
    }
    cout << count << endl; //выводим количество слов

    system("pause");
    return 0;
}
